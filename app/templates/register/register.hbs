<h4 class="subheading">Create your account</h4>
<form>
  <div class="row">
    <div class="column">
        <input type="text" placeholder="Enter your name ..." />
    </div>
  </div>
  <div class="row">
    <div class="column">
        <input type="text" placeholder="Enter your username ..." />
    </div>
  </div>
  <div class="row">
    <div class="column">
        <input type="password" placeholder="Enter your password ..." />
    </div>
  </div>
  <div class="row button-row">
    <div class="large-3 column">
      {{#link-to 'dashboard'}}<button>Sign up</button>{{/link-to}}
    </div>
    <div class="large-9 column text-right medium-only-text-left small-only-text-left end">
      <span class="links">{{#link-to 'register.login'}}Login{{/link-to}}</span>
    </div>
  </div>
</form>
