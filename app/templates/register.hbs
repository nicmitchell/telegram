<div class="login">
  <div class="row container">
    <div class="row right">
      <img class="column right postmark" src="assets/images/postmark.png" alt="Telegram postmark">
    </div>
    <div class="row">   
      <div class="large-6 medium-6 column box left">
        <img class="logo column medium-10 medium-centered small-centered" src="assets/images/telegram-logo.png" alt="Telegram logo" title="Telegram: know what's happening!">
      </div>
      <div class="large-6 medium-6 column">
        <div class="large-10 medium-10 small-10 column large-centered medium-centered small-centered">
          <h4 class="subheading">Create your account</h4>
          <form>
            <div class="row">
              <div class="column">
                  <input type="text" placeholder="Enter your name ..." />
              </div>
            </div>
            <div class="row">
              <div class="column">
                  <input type="text" placeholder="Enter your username ..." />
              </div>
            </div>
            <div class="row">
              <div class="column">
                  <input type="password" placeholder="Enter your password ..." />
              </div>
            </div>
            <div class="row button-row">
              <div class="large-3 column">
                {{#link-to 'dashboard'}}<button>Sign up</button>{{/link-to}}
              </div>
              <div class="large-9 column text-right medium-only-text-left small-only-text-left end">
                <span class="links">{{#link-to 'login'}}Login{{/link-to}}</span>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
